# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=yatra_db
DB_USER=root
DB_PASSWORD=your_password_here
DB_DIALECT=mysql

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

# CORS Configuration
# Comma-separated list of allowed origins
# In development, all origins are allowed by default
# In production, specify your frontend URLs
# Examples:
# CORS_ORIGIN=https://yourfrontend.com,https://app.yourfrontend.com
# CORS_ORIGIN=* (allows all origins - NOT recommended for production)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Admin Default Credentials
DEFAULT_ADMIN_EMAIL=admin@yatra.com
DEFAULT_ADMIN_PASSWORD=Admin@123

# Cloudinary Configuration
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

